{
  "manifest_version": 3,
  "name": "TabSnap",
  "version": "1.0",
  "description": "Copy URLs of all open tabs to clipboard",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "permissions": ["tabs", "clipboardWrite"],
  "icons": {
    "48": "icon.png"
  }
}
